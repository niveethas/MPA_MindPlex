<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="?attr/bgGradientSecondary"
    tools:context=".ChangePersonalInfoActivity">

    <EditText
        android:id="@+id/editLNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/emailLbl"
        app:layout_constraintEnd_toEndOf="@+id/emailLbl"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/emailLbl"
        app:layout_constraintTop_toBottomOf="@+id/lNamelbl" />

    <TextView
        android:id="@+id/fNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="First Name"
        app:layout_constraintBottom_toTopOf="@+id/editFNameTxt"
        app:layout_constraintEnd_toEndOf="@+id/editFNameTxt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editFNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/personalInfoTitle" />

    <EditText
        android:id="@+id/editFNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/lNamelbl"
        app:layout_constraintEnd_toEndOf="@+id/lNamelbl"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lNamelbl"
        app:layout_constraintTop_toBottomOf="@+id/fNameLbl" />

    <TextView
        android:id="@+id/lNamelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Last Name"
        app:layout_constraintBottom_toTopOf="@+id/editLNameTxt"
        app:layout_constraintEnd_toEndOf="@+id/editLNameTxt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editLNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/editFNameTxt" />

    <TextView
        android:id="@+id/emailLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/editEmailText"
        app:layout_constraintEnd_toEndOf="@+id/editEmailText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editEmailText"
        app:layout_constraintTop_toBottomOf="@+id/editLNameTxt" />

    <EditText
        android:id="@+id/editEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/saveChangesbtn"
        app:layout_constraintEnd_toEndOf="@+id/saveChangesbtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/saveChangesbtn"
        app:layout_constraintTop_toBottomOf="@+id/emailLbl" />

    <Button
        android:id="@+id/saveChangesbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/round_green_btn"
        android:gravity="center"
        android:onClick="changePersonalInfo"
        android:padding="5dp"
        android:text="Save Changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailText" />

    <TextView
        android:id="@+id/personalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Personal Information"
        android:textColor="?attr/headingTextPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fNameLbl"
        app:layout_constraintEnd_toEndOf="@+id/fNameLbl"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fNameLbl"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>