<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/introQText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, What would you like to do today?"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/gamesLinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Games"
        android:onClick="gamesClicked"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/talkLinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk to Someone"
        android:onClick="talkClicked"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/stressLinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stressManageClicked"
        android:text="Help Manage Stress"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="258dp" />

</androidx.constraintlayout.widget.ConstraintLayout>