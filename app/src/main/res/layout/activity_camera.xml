<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="backBtnClick"
    tools:context=".CameraActivity">

    <FrameLayout
        android:id="@+id/colourContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.camera.view.PreviewView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <TextView
        android:id="@+id/colourText"
        android:layout_width="257dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginStart="77dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="304dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:textColor="@color/main_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/colourContainer"
        app:layout_constraintEnd_toEndOf="@+id/colourContainer"
        app:layout_constraintStart_toStartOf="@+id/colourContainer"
        app:layout_constraintTop_toTopOf="@+id/colourContainer" />

    <TextView
        android:id="@+id/bckBtn"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/backarrow"
        android:gravity="top|left"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>