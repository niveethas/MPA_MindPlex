<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    tools:context=".StressAdviceActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/bgGradientPrimary"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adviceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center_horizontal"
                android:text="Tips and Advice"
                android:textAlignment="center"
                android:textColor="?attr/headingTextPrimary"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/emailLabelSI"
                app:layout_constraintStart_toStartOf="@+id/emailLabelSI"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AnxietyAdvice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary" />

            <ImageView
                android:id="@+id/AdviceImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/StressText1"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="?attr/colorOnPrimary"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/StressImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/AnxietyAdvice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/infographicImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/StressText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="?attr/colorOnPrimary"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/StressText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>